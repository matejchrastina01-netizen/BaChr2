@model Location
@{
    ViewData["Title"] = "Editace lokace";
}

<h2>Editace lokace</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="MapX"></label>
            <input asp-for="MapX" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="MapY"></label>
            <input asp-for="MapY" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Uložit</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Zpět</a>
</form>