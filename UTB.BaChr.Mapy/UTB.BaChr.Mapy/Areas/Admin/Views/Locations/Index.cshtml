@model IEnumerable<Location>
@{
    ViewData["Title"] = "Správa lokací";
}

<h1>Správa lokací</h1>
<a asp-action="Create" class="btn btn-success mb-3">Pridat novou lokaci</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Název</th>
            <th>Popis</th>
            <th>Map X</th>
            <th>Map Y</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.MapX</td>
                <td>@item.MapY</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Upravit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Smazat?')">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>